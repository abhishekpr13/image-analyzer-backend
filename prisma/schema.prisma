generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  files     File[]

  @@map("users")
}

model File {
  id             String   @id @default(cuid())
  originalName   String
  fileName       String
  filePath       String
  fileSize       Int
  mimeType       String
  uploadDate     DateTime @default(now())
  analysisResult String?
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("files")
}